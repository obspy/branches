Address = /import/neptun-radler/hosseini-downloads		# where you want to save the waveforms and ... (/media/Elements/TEST_WAVE) (/export/data/BH)
min_datetime = 2011-01-01			# min datetime
max_datetime = 2011-02-01			# max datetime
min_magnitude = 6.5				# min magnitude
max_magnitude = 6.8				# max magnitude
min_latitude = -90					# min latitude (-90)
max_latitude = 90					# max latitude (90)
min_longitude = -180				# min longitude (-180)
max_longitude = 180					# max longitude (180)
min_depth = +10						# min depth
max_depth = -6000					# max depth
max_results = 2500                  # max Results
time_before = 300					# Time before the Event
time_after = 4800					# Time after the Event

plot_events = off                    # whether you want to have a plot of all events or not (on/off)...ATTENTION: you should have "mpl_toolkits.basemap" installed

network = *							# Network code, e.g. ‘BW’, wildcards allowed.
station = *							# Station code, e.g. ‘MANZ’, wildcards allowed.
location = *						# Location code, e.g. ‘00’, wildcards allowed.
channel = *						# Channel code, e.g. ‘EHE’, wildcards allowed.
BHE = Y								# BHE is needed
BHN = Y								# BHN is needed
BHZ = Y								# BHZ is needed

ATTENTION: Restricting returned data by geographical coordinates either
all of minlat, maxlat, minlon and maxlon have to be specified (for a rectangular bounding box) OR 
all of lat, lon, minradius and maxradius have to be specified (for a circular bounding area)

lat = 0								# Latitude of center point for circular bounding area.
lon = 0								# Longitude of center point for circular bounding area.
minradius = 0						# Minimum radius for circular bounding area.
maxradius = 1e100000				# Maximum radius for circular bounding area.
minlat = None						# Minimum latitude for rectangular bounding box.
maxlat = None						# Maximum latitude for rectangular bounding box.
minlon = None						# Minimum longitude for rectangular bounding box.
maxlon = None						# Maximum longitude for rectangular bounding box.

Plot:

llcrnrlon = -180 					# longitude of lower left hand corner of the desired map domain (degrees).
llcrnrlat = -90  					# latitude of lower left hand corner of the desired map domain (degrees).
urcrnrlon = 180 					# longitude of upper right hand corner of the desired map domain (degrees).
urcrnrlat = 90 						# latitude of upper right hand corner of the desired map domain (degrees).

mass = Y							# mass downloading of waveforms
IRIS = N							# IRIS will be used (Y)
ArcLink = N							# ArcLink will be used (Y)
QC_IRIS = Y							# Quality Control for IRIS
QC_ARC = Y							# Quality Control for ArcLink
get_events = N						# To get events (Y)
nodes = Y							# Do it on nodes
